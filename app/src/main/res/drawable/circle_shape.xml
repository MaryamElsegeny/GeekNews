<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp" />
            <padding
                android:bottom="25dp"
                android:left="25dp"
                android:right="25dp"
                android:top="25dp" />
            <stroke
                android:width="15dp"
                android:color="#E8ECEC" />
            <solid
            android:color="#fff"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="40dp"
                android:height="40dp" />
            <stroke
                android:width="15dp"
                android:color="@color/gray" />
            <solid
                android:color="#fff"/>
        </shape>
    </item>
</layer-list>
